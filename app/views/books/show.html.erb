<div class="container">
 <div class="row">
	<%= render 'books/list', user: @user, book: @book, booknew: @booknew %>
	 <div class="col-xs-9">
		 <h2>Book detail</h2>

		 <table>
			<tr>
				<td>
					<%= link_to user_path(@user) do %>
					<%= attachment_image_tag @book.user, :profile_image,  format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size:"60x60" %>
					<%= @user.name %>

					<% end %>
				</td>

				<td><%= @book.title %></td>


				<td><span><%= @book.body %></span></td>


				<% if @user.id == current_user.id %>

					<td><%= link_to "Edit", edit_book_path(@book) %></td>
					<td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
				<% end %>
			</tr>
		</table>
	</div>
 </div>
</div>