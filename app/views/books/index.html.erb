<div class="container">
	 <div class="row">
	    <%= render 'books/list', user: @user, booknew: @booknew %>
		<div class="col-xs-9">
		 	<h2>Books</h2>
			<table class="table table-hover table-inverse">
				 <thead>
					<tr>
						<th></th>
						<th><font>Title</font></th>
						<th><font>Body</font></th>
						<th colspan="3"></th>
					</tr>
				 </thead>
				 <tbody>
					<% @books.each do |book| %>
						<tr>
							<td>
								<%= link_to book.user do %>
									<%= attachment_image_tag book.user, :profile_image,  format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size:"60x60" %>

								<% end %>
							</td>
							<td><%= link_to book.title , book_path(book.id) %></td>
							<td><span><%= book.body %></span></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	 </div>
</div>
