<div class="form-body">
  <h1>User info</h1>
   <%= form_for(@user, url:user_path, method: :patch) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group has-icon">


          <br><label class="control-label sr-only" for="inputEmail">Name</label>
          <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail"%>

            <div>

              <br><label class="control-label sr-only" for="inputEmail">Image</label><br>
              <%= f.attachment_field :profile_image  %>

            </div>


              <br><label class="control-label sr-only" for="inputEmail">Introduction</label>
              <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputEmail"%>
                <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
      </div>
        <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    <% end %>



</div>