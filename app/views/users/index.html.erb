<div class="container">
 <div class="row">
	<%= render 'books/list', user: @user, book: @book, booknew: @booknew %>

	<div class="col-xs-9">
		<div>
			<h2>Users</h2>
			<table class="table">
				<thead>
					<tr>
						<th><font>Image</font></th>
						<th><font>name</font></th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>


							<td><%= attachment_image_tag user, :profile_image,  format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg", size:"50x50" %></td>
							<td> <span><%= user.name %></span></td>

							<td><%= link_to "Show", user_path(user.id) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
 </div>
</div>