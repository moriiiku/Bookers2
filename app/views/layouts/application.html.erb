<!DOCTYPE html>




<html>
  <head>
   <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <header class="navbar  navbar-inverse">
    <div class="container">
      <nav class="nav navbar-nav navbar-left">
        <span style="color: white">Bookers</span>
      </nav>

      <nav>
        <ul class="nav navbar-nav navbar-right">

            <% if user_signed_in? %>

            <%= link_to "Home", user_path(current_user.id), class:"glyphicon glyphicon-home home", style: "color: white;" %>

            <%= link_to 'Users', users_path, class:"glyphicon glyphicon-user users", style: "color: white;" %>

            <%= link_to 'Books', books_path, class:"glyphicon glyphicon-book books", style: "color: white;"  %>

            <%= link_to "logout", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out logout", style: "color: white;"  %>

            <% else %>

            <%= link_to "Home", root_path, class:"glyphicon glyphicon-home home", style: "color: white;"  %>


            <%= link_to "About", home_about_path, class:"glyphicon glyphicon-link about", style: "color: white;"  %>

            <%= link_to "sign up", new_user_registration_path, class:"glyphicon glyphicon-edit sign_up", style: "color: white;"  %>


            <%= link_to "login", user_session_path, class:"glyphicon glyphicon-log-in sign_in", style: "color: white;"  %>


            <% end %>

         </ul>
       </nav>
      </div>
    </header>
    <%= render 'layouts/notifications' %>
  <%= yield %>
</html>


